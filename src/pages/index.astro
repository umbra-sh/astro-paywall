      function openPaywall(variant) {
        const modal = document.getElementById('paywallModal');
        const frame = document.getElementById('paywallFrame');
        frame.src = `/paywall?variant=${variant}&show_survey=true`;
        modal.classList.add('active');
        document.body.style.overflow = 'hidden';
      }

      function showApproach(approach) {
        // Update tabs
        document.querySelectorAll('.approach-tab').forEach(tab => {
          tab.classList.remove('active');
          if (tab.dataset.tab === approach) {
            tab.classList.add('active');
          }
        });
        
        // Update content
        document.querySelectorAll('.approach-content').forEach(content => {
          content.classList.remove('active');
        });
        document.getElementById(`approach-${approach}`).classList.add('active');
      }

      function openApproachPreview(url) {
        const modal = document.getElementById('paywallModal');
        const frame = document.getElementById('paywallFrame');
        frame.src = url;
        modal.classList.add('active');
        document.body.style.overflow = 'hidden';
      }

      function closePaywall() {
        const modal = document.getElementById('paywallModal');
        const frame = document.getElementById('paywallFrame');
        modal.classList.remove('active');
        document.body.style.overflow = '';
        setTimeout(() => {
          frame.src = '';
        }, 300);
      }

      function closeModal(event) {
        if (event.target === event.currentTarget) {
          closePaywall();
        }
      }

      document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape') {
          closePaywall();
        }
      });

      window.addEventListener('message', function(e) {
        if (e.origin !== window.location.origin) return;
        if (e.data === 'closePaywall' || e.data === 'closeDialog') {
          closePaywall();
        }
      });
