---
interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Upgrade your plan' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <script type="text/javascript" src="/iframeResizer.contentWindow.min.js"></script>
    <style is:global>
      :root {
        --pw-bg-0: #0a0805;
        --pw-bg-1: #16120e;
        --pw-surface: rgba(28, 25, 23, 0.85);
        --pw-surface-strong: rgba(40, 36, 32, 0.95);
        --pw-border: rgba(251, 191, 36, 0.25);
        --pw-border-strong: rgba(251, 191, 36, 0.5);
        --pw-text-strong: #fffaf5;
        --pw-text: #e8ddd3;
        --pw-text-soft: #c4b5a5;
        --pw-accent: #f59e0b;
        --pw-accent-strong: #ea580c;
        --pw-accent-glow: rgba(245, 158, 11, 0.4);
        --pw-radius-sm: 12px;
        --pw-radius-md: 16px;
        --pw-radius-lg: 20px;
      }

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      html {
        font-family: 'Inter', system-ui, -apple-system, sans-serif;
        background: var(--pw-bg-0);
        color: var(--pw-text-strong);
        line-height: 1.6;
      }

      body {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 24px;
        background:
          radial-gradient(800px 500px at 20% 0%, rgba(245, 158, 11, 0.08), transparent 50%),
          radial-gradient(600px 400px at 80% 100%, rgba(234, 88, 12, 0.06), transparent 50%),
          linear-gradient(180deg, var(--pw-bg-0) 0%, var(--pw-bg-1) 100%);
      }
    </style>
  </head>
  <body>
    <slot />
  </body>
</html>
